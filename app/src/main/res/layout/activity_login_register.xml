<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dinner_dark"
    tools:context=".LoginRegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/language_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="20dp"
            android:hint="@string/select_language"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/white"
            android:drawableStart="@drawable/ic_language_white_24dp"
            android:drawablePadding="5dp"
            style="@style/button_margin_top"
            />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/ic_logo_go4lunch"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_title_style"
            android:text="@string/login_title"/>

        <TextView
            android:id="@+id/login_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/login_subtitle_style"
            android:text="@string/login_message"/>

        <Button
            android:id="@+id/email_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cornerRadius="20dp"
            android:hint="@string/sign_in_with_email"
            android:backgroundTint="@color/black"
            android:textColorHint="@color/white"
            android:drawableStart="@drawable/ic_email_white_24dp"
            android:drawablePadding="5dp"
            style="@style/button_margin_top"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:buttonSize="wide"
            style="@style/button_margin_top"/>


        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/button_margin_top"/>

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/button_margin_top"/>

        <ProgressBar
            android:id="@+id/indeterminateProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:visibility="invisible"
            android:layout_marginTop="-7dp"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>