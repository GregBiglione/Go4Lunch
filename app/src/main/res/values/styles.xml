<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--////////////////////////////// S SIZE ///////////////////////////////////////////////////-->

    <style name="logo_drawer_style_small">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="nav_header_title_small">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="horizontal_restaurant_item_layout_small">
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">65dp</item>
    </style>

    <style name="restaurant_name_small">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="image_restaurant_item_small">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="restaurant_item_distance_small">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="is_joining_style_small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <!--////////////////////////////// N SIZE ///////////////////////////////////////////////////-->

    <style name="button_margin_top">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="nav_header_title">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="name_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">7sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="mail_style">
        <item name="android:layout_marginLeft">5sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="login_title_style">
        <item name="android:textSize">76sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_subtitle_style">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="logo_drawer_style">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="restaurant_name">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="is_joining_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="orange_layout_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="detailed_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="detailed_address">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="horizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:background">@color/hr</item>
    </style>
    
    <style name="three_items_text_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="three_items_icon_style">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="login_activity_bkg">
        <item name="android:background">@drawable/dinner_dark</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="workmate_horizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">76dp</item>
        <item name="android:background">@color/hr</item>
    </style>

    <style name="restaurant_horizontalLine_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/hr</item>
    </style>

    <style name="horizontal_restaurant_item_layout">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">80dp</item>
    </style>

    <style name="image_restaurant_item">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <!--////////////////////////////// Settings style ///////////////////////////////////////////-->
    
    <style name="setting_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/settingBorderTop</item>
    </style>

    <style name="setting_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="setting_notification_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="setting_check_box_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="setting_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/settingBorderTop</item>
    </style>

    <!--////////////////////////////// L SIZE ///////////////////////////////////////////////////-->

    <style name="restaurant_name_large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="restaurant_address_large">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">0.5</item>
    </style>

    <style name="workmates_joining_number_large">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="horizontal_restaurant_item_layout_large">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">75dp</item>
    </style>

    <style name="image_restaurant_item_large">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="is_joining_style_large">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="detailed_name_large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="three_items_text_style_large">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="detailed_address_large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
